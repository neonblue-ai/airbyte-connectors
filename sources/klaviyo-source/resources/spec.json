{
  "documentationUrl": "https://docs.airbyte.com/integrations/sources/klaviyo",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Klaviyo Configuration Spec",
    "type": "object",
    "properties": {
      "credentials": {
        "title": "Authorization Method",
        "type": "object",
        "oneOf": [
          {
            "type": "object",
            "title": "OAuth Refresh Token",
            "required": [
              "auth_type",
              "client_id",
              "client_secret",
              "refresh_token"
            ],
            "properties": {
              "auth_type": {
                "type": "string",
                "const": "oauth",
                "order": 0
              },
              "client_id": {
                "type": "string",
                "title": "Client ID",
                "description": "Klaviyo OAuth client ID."
              },
              "client_secret": {
                "type": "string",
                "title": "Client Secret",
                "description": "Klaviyo OAuth client secret."
              },
              "refresh_token": {
                "type": "string",
                "title": "Refresh Token",
                "description": "Klaviyo OAuth refresh token."
              }
            }
          },
          {
            "type": "object",
            "title": "API Key",
            "required": ["auth_type", "api_key"],
            "properties": {
              "auth_type": {
                "type": "string",
                "const": "api_key",
                "order": 0
              },
              "api_key": {
                "type": "string",
                "title": "API Key",
                "description": "Klaviyo API Key. See our <a href=\"https://docs.airbyte.com/integrations/sources/klaviyo\">docs</a> if you need help finding this key."
              }
            }
          }
        ],
        "order": 0
      },
      "initialize": {
        "type": "boolean",
        "title": "Initialize",
        "description": "Uses created (instead of updated, if possible) as the cursor.",
        "default": false,
        "order": 1
      }
    }
  }
}
